  <script type="text/javascript">
      

    function send() {
        var e = document.getElementById("idconference");
        var selected = e.options[e.selectedIndex].value;
       
        if(isNaN(selected)){
            document.getElementById("result").innerHTML = "wrong id";
        }else{
            var json = {
                idconference: selected,
            };
            var answer = {};
            var http_request = new XMLHttpRequest();
        
            http_request.open("POST", "/delete_conference");
            http_request.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
            http_request.onload = function() {
       
                if (http_request.readyState == 4 && http_request.status == 200) {
                    answer = JSON.parse(http_request.responseText);
                    document.getElementById("result").innerHTML = answer.result;
                    }
            };
            
            http_request.send(JSON.stringify(json));
            
        }
    }
      
  </script>
